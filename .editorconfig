root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{h,hpp,c,cpp,cppm,ixx,inc,vert,frag,tesc,tese,geom,comp}]
indent_style = tab
indent_size = 4
charset = utf-8

[CMakeLists.txt]
indent_style = tab
indent_size = 4
charset = utf-8
